.row.signupTop
	.col-md-2
		#signupGalV
			- @displayPixV.each do |pic|
				.picTile
					= link_to (image_tag pic.image.url(:medium)), pic

	.col-md-10
		.signupForm.bg.tc
			%p
				Signing up is free! Sign up and start selling and buying images today!
			= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
				= f.error_notification

				.form-inputs
					= f.input :artist, as: :radio_buttons, label: 'I am an ', item_label_class: "radio-inline", item_wrapper_tag: false, collection: ['Artist', 'Client']

					= f.input :username, required: true, autofocus: true
					= f.input :email, required: true, autofocus: true
					= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
					= f.input :password_confirmation, required: true


					= f.fields_for :profile do |profile_form|

						= profile_form.input :avatar, input_html: { class: 'form-control', as: :file }
						= profile_form.input :brandname
						= profile_form.input :description

				.form-actions
					= f.button :submit, "Sign up"

			= render "users/shared/links"
.row
	#signupGalH
		- @displayPixH.each do |pic|
			.picTile
				= link_to (image_tag pic.image.url(:medium)), pic
