!!! 5
%html
%head
  %title PopEFX
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/raphael/2.2.7/raphael.min.js"
  = javascript_include_tag "http://code.jquery.com/ui/1.10.2/jquery-ui.js"
  = javascript_include_tag "https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"
  = javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/typeahead.js/0.11.1/typeahead.jquery.js"
  %link{:rel => "stylesheet", :href => "http://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"}
  = csrf_meta_tags
%body
  = render 'layouts/header'


  .container.maintheme
    - flash.each do |name, msg|
      = content_tag :div, msg, class: "alert alert-info"

    .heroImage#heroImage
    = yield

  = render 'layouts/footer'
