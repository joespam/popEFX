= simple_form_for @picture, html: { multipart: true } do |f|
	- if @picture.errors.any?
		#errors
			%h2
			= pluralize(@picture.errors.count, "error")
			prevented this picture from saving
			%ul
				- @picture.errors.full_messages.each do |msg|
					%li= msg
	
	.form-group
		= f.input :image, input_html: { class: 'form-control', as: :file }

	.form-group
		= f.input :title, input_html: { class: 'form-control' }

	.form-group
		= f.input :description, input_html: { class: 'form-control' }

	.form-group
		= f.input :keywords, input_html: { class: 'form-control', as: :textarea }

	= f.button :submit, class: "btn btn-primary"